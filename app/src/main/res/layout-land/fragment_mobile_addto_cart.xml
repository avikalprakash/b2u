<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:background="@color/colorPrimary"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:background="@color/colorPrimary"
    tools:context="com.jeptag.organization.lueinfo.fragments.MobileAddtoCart">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <android.support.v7.widget.Toolbar
                android:navigationIcon="@drawable/white_arrow_"
        android:id="@+id/toolbar_mrc"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
            <include layout="@layout/header"
                 android:id="@+id/header"/>
    </android.support.v7.widget.Toolbar>
            <ProgressBar
                android:id="@+id/circular_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:indeterminateDrawable="@android:drawable/progress_horizontal"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/rating_mobile_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="281"
            android:textColor="#F89406"

            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
         <RatingBar
             android:id="@+id/ratingbar"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             style="@style/StarRatingBar"
             android:layout_toLeftOf="@+id/rating_mobile_count"
             android:layout_marginRight="10dp"/>
    </RelativeLayout>


            <android.support.v4.view.ViewPager

                android:id="@+id/viewpager"
                android:layout_width="fill_parent"
                android:layout_height="270dp"
                android:layout_weight="3.43"
                android:background="@android:color/transparent" />

            <com.matthewtamlin.sliding_intro_screen_library.indicators.DotIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin"
            app:numberOfDots="5"
            android:gravity="center"
            app:selectedDotColor="@android:color/holo_blue_light"
            app:unselectedDotColor="@android:color/darker_gray"
            android:layout_marginBottom="5dp"
            app:selectedDotIndex="1"/>
            <TextView
                android:layout_margin="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:id="@+id/ItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/Base.CardView"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/vietnam"/>
            <TextView
                android:layout_weight="0.12"
                android:textColor="@android:color/holo_green_dark"
                android:id="@+id/Sale_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:text="10,500"/>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/regularprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:text="10,500"/>

                <ImageView
                    android:layout_width="80dp"
                    android:src="@drawable/linepng"
                    android:layout_height="40dp"
                    android:layout_gravity="left|center_vertical" />
            </FrameLayout>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_below="@+id/description"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginTop="31dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/byNow"
            android:layout_width="0dp"
            android:layout_weight="1.13"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_yellowback"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="Buy Now"/>

        <Button
            android:id="@+id/addToCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.21"
            android:background="@drawable/edit_text_yellowback"
            android:text="Add to Cart"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".01"
            android:background="@android:color/transparent"
            android:layout_height="?attr/actionBarSize"/>


        </LinearLayout>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:layout_margin="10dp"
            android:text="Know the product location"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
<FrameLayout
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:id="@+id/adresstext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/map"
            tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/yellow"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Description And Details"
        android:id="@+id/textView6"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Weight"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Product Color"
        android:id="@+id/textView23"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material"
        android:id="@+id/textView22"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView23"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23" />

    <TextView
        android:textColor="#F89406"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Material"
        android:layout_above="@+id/textView27"
        android:layout_alignLeft="@+id/Product_Color"
        android:layout_alignStart="@+id/Product_Color" />

    <TextView
        android:textColor="#F89406"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Weight"
        android:layout_above="@+id/textView23"
        android:layout_alignLeft="@+id/Material"
        android:layout_alignStart="@+id/Material" />

    <TextView
        android:textColor="#F89406"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Product_Color"
        android:layout_above="@+id/textView22"
        android:layout_toRightOf="@+id/textView23"
        android:layout_toEndOf="@+id/textView23"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="description"
        android:id="@+id/description"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView27"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22" />

    <TextView
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock "
        android:id="@+id/textView27"
        android:layout_below="@+id/textView22"
        android:layout_alignLeft="@+id/description"
        android:layout_alignStart="@+id/description"
        android:layout_marginTop="15dp" />

    <TextView
        android:textColor="#F89406"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Stock"
        android:layout_alignTop="@+id/textView27"
        android:layout_alignLeft="@+id/Material"
        android:layout_alignStart="@+id/Material" />



</RelativeLayout>
    </ScrollView>
