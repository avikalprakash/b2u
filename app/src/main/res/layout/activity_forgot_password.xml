<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lueinfo.bshop.RitsActivity.ForgotPassword">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/back_imageverified"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/leftarrowed" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Change Password"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/emaillayout"
    android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/emailidtxt"
        android:hint="Email id"
        />

    <Button
        android:id="@+id/sbmtbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="sUBMIT"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/otplayout"
        android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/otptxt"
            android:hint="Otp"
            />

        <Button
            android:id="@+id/sbmtbtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="sUBMIT"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/changepass"
        android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/changeppaastxt"
            android:hint="Password"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/againchangeppaastxt"
            android:hint="confirm password"
            />

        <Button
            android:id="@+id/sbmtbtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="sUBMIT"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            />



    </LinearLayout>

</LinearLayout>
