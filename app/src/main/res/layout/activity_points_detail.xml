<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.lueinfo.bshop.RitsActivity.PointsDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/back_imageverified"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/leftarrowed" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Prepoint Details"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/percentagefull"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text=";kmpsmdvpsmvddsv"
        android:textSize="20dp"
        android:id="@+id/monettxt"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text=";kmpsmdvpsmvddsv"
        android:textSize="20dp"
        android:id="@+id/cashpoint"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bynowbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:textColor="#ffff"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="Buy Now"
        android:background="@color/colorPrimary"
        />

</LinearLayout>
