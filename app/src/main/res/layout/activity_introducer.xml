<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"
   >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="INTRODUCER"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginBottom="40dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/introducer_edtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000"
            android:gravity="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:padding="10dp"
            android:background="#ffff"
            android:hint="Introducer"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#000000"
            />


        <EditText
            android:id="@+id/introducerphone_edtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000"
            android:gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:inputType="number"
            android:background="#ffffff"
            android:hint="Introducer Phone No."/>

    </LinearLayout>


    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn1"
        android:textColor="#ffff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/forgotxt"
        android:layout_marginLeft="15dp"
        android:text="Confirm Introducer"/>

</LinearLayout>
