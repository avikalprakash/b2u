<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/cardview1"
    app:cardPreventCornerOverlap="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_backer"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryWhite"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/backer"
            android:layout_width="155dp"
            android:layout_height="152dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/subcat_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/slider"
                    android:layout_below="@+id/subcot_item_text" />

                <TextView
                    android:id="@+id/subcot_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/subcat_image"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/subcat_image"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Nokia c2"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_alignLeft="@+id/subcat_image"
                    android:layout_alignStart="@+id/subcat_image" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/addItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/view"
                android:orientation="vertical"
                android:paddingLeft="10dp">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
